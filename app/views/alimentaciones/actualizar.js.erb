<% if @alimentacion_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-alimentacion' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-alimentaciones");

  $("#form_buscar_alimentacion_id").val('<%= @alimento.id %>');
  $("#form_buscar_alimentacion_nombre_alimentacion").val('');
  $("#form_buscar_alimentacion_descripcion").val('');
  $("#form_buscar_alimentacion_cantidad_stock").val('');

  setTimeout(function(){

    $("#<%= params[:window_id]%>").modal('hide');
    $("#form-buscar-alimentaciones").submit();
    swal("El alimento ha sido actualizado Exitosamente.");

  }, 2000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-alimentacion' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-editar-alimentaciones");

<% end %>
