<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-alimentacion' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-alimentacion");

  $("#form_buscar_alimentaciones_id").val('<%= @alimento.id %>');
  $("#form_buscar_alimentaciones_descripcion").val('');
