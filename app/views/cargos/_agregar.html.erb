<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Cargo</h4>
      
    </div>

    <%= form_for @cargo, remote: true, url: cargos_guardar_url, html: { id: "form-agregar-cargo" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :descripcion, "DescripciÃ³n #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :descripcion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= label_tag :nil, "Sueldo #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= f.text_field :sueldo, :onkeyup=>' formatear_numero(this)' ,:onkeypress=> "return isNumberKey(event)", class: 'form-control input-sm',style:"text-transform:uppercase;", :maxlength=> 12 %></div>
          <div class="col-sm-1"></div><br /><br />
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-cargo" %>          
      </div>

    <% end %>

  </div>
  
</div>

<style type="text/css">

  #form-agregar-cargo label, #form-agregar-cargo input[type='text'], #form-agregar-cargo select { float:left; margin-top:5px;}
  #form-agregar-cargo br {clear:both; }
  #form-agregar-cargo label { width:200px;font-size:12px;margin-top:10px;}
  #form-agregar-cargo #descripcion { width:50%;}
  

</style>

