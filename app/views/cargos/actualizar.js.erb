<% if @cargo_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-cargo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-cargo");
   
