<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Cambiar Estado Celo</h4>
      
    </div>


    <%= form_for @celo, remote: true, url: celos_guardar_cambiar_estado_a_en_proceso_fecundacion_url, html: { id: "form-cambiar-estado-celo" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>
      <%= hidden_field_tag :celo_id, @celo.id%>
      <%= hidden_field_tag :ganado_id, @celo.ganado_id%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= label_tag nil, "Tipo Concepción #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= collection_select :tipo_concepcion, :id, TipoConcepcion.tipo_concepcion.orden_01, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
          <div class="col-sm-1"></div><br/><br/>
          
          <div id = "monta_natural" hidden="true">

            <%= hidden_field_tag :ganado_reproductor_id %>
            <div class="col-sm-4"><%= label_tag :nil, "Ganado #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= text_area_tag :ganado ,nil,class: 'form-control input-sm' %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= f.label :nombre_lbl, "Nombre Ganado ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :nombre_ganado, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />  
            

            <div class="col-sm-4"><%= f.label :rp_lbl, "RP ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :rp, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />


            <div class="col-sm-4"><%= f.label :rfid_lbl, "Código RFID ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :codigo_rfid, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />
          
          </div>


          <div id = "inseminacion_artificial" hidden="true">

          </div>




          <div class="col-sm-4"><%= label_tag :nil, "Observación ".html_safe %></div>
          <div class="col-sm-7"><%= text_area_tag :observacion ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />
                 
           
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#", class: "btn btn-primary", id: "btn-guardar-cambiar-estado" %>
          
      </div>
    
    <% end %>

  </div>
</div>

<style type="text/css">

  #form-cambiar-estado-celo label, #form-cambiar-estado-celo input[type='text'] { float:left; margin-top:5px;}
  #form-cambiar-estado-celo br {clear:both; }
  #form-cambiar-estado-celo label { width:200px; font-size:12px;}
  .ui-autocomplete{z-index: 1000000; font-size: 10px;}

</style>

<script type="text/javascript">

  aplicar_datepicker2();

  setTimeout(function(){ 

    $("#fecha_inicio").focus();
   
  }, 1000);


   $("textarea").keydown(function(e){
    // Enter was pressed without shift key
    if (e.keyCode == 13 && !e.shiftKey)
    {
        // prevent default behavior
        e.preventDefault();
    }
    });

   function isNumberKey(evt)
  {
     var charCode = (evt.which) ? evt.which : event.keyCode
     if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46) {
         
         return false;
     }

     return true;
  }

  $("#ganado").bind('focus', function(){   

    var ganados = [];

    $("#ganado").val('');
    $("#ganado_reproductor_id").val('');
    $("#nombre_ganado").val('');
    $("#hacienda").val('');
    $("#rp").val('');
    $("#codigo_rfid").val('');

    $.getJSON("<%= url_for(celos_buscar_ganado_reproductor_path) %>", { ganado: $(this).val(), sexo_ganado_id: <%=PARAMETRO[:sexo_ganado_macho]%>}, function(j){
        
      var ganado = "";
      var options = "<option value=''> -- Seleccione un Ganado -- </option>"
      for (var i = 0; i < j.length; i++) {
        
        if(j[i].nombre != ganado ){
          
          ganados.push( {value: j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid+" - "+j[i].hacienda});
          ganado =j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp +" - "+j[i].codigo_rfid ;

          options += "<option value="+ j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid + "</option>"

        }

      }

      $("#ganado_reproductor_id").html(options);

    })

    $("#ganado").autocomplete({

      minLength: 1,
      source: ganados,
      focus: function( event, ui ) {
      
        $("#ganado" ).val( ui.item.label );
        return false;
      },
      select: function( event, ui ) {

        var datos = ui.item.value.split(" - ");
        $("#ganado").val( ui.item.label);
        $("#ganado_reproductor_id").val(datos[0]);
        $("#nombre_ganado").val(datos[1]);
        $("#rp").val(datos[2]);
        $("#codigo_rfid").val(datos[3]);
        $("#hacienda").val(datos[4]);

        return false;

      }

    })

  });

  $("#btn-guardar-cambiar-estado").bind('click', function () {

      valido = true
      msg = ""

     

      if($("#observacion").val().length == 0){

        msg +="Debe agregar una observación.\n"
        valido = false
          
      }
    

      if (valido){

        swal({
          title: "Cambiar Estado Celo",
          text: "Al confirmar el estado del Celo a Reproducción éste podrá ser visualizado en el módulo de Reproducciones para su seguimiento durante el proceso de preñez.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-cambiar-estado-celo").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })


  $("#tipo_concepcion_id").bind('change', function(){ 

  if ($(this).val() == 1){

    $("#monta_natural").show();
    $("#inseminacion_artificial").hide();

  } else{

    $("#inseminacion_artificial").show();
    $("#monta_natural").hide();

  } 



  })


</script>