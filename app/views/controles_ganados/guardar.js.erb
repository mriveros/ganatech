<% if @guardado_ok %>

  $("<div class='col-sm-12' id='msg-agregar-control-ganado' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-control-ganado");
   
  $("#form_buscar_control_ganado_id").val('<%= @esperma.id %>');
  $("#form_buscar_control_ganado_fecha_control").val('');
  $("#form_buscar_control_ganado_codigo").val('');
  $("#form_buscar_control_ganado_nombre").val('');
  $("#form_buscar_control_ganado_ganado_rp").val('');
  $("#form-buscar-control-ganado").submit();
  
  setTimeout(function(){ 
    $("#<%= params[:window_id]%>").modal('hide'); 
    swal("Sanitaciones","Sanidad agregada exitosamente!", "success");
  }, 2000);


<% else %>
  
    $("<div class='col-sm-12' id='msg-agregar-control-ganado' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-agregar-control-ganado");
    swal("Sanitaciones", "Error al guardar la sanidad.<%=@msg%> Intente m√°s tarde","error");

<% end %>