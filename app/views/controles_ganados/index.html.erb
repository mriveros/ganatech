<%= javascript_include_tag "sweetalert.min" %>
<%= stylesheet_link_tag "sweetalert" %>
<div>

  <div class="col-sm-12" style="border-bottom: 2px solid #b6b6b6;margin-bottom:5px;padding:0px;">
    <h3 style="float:left;margin-top:5px;">Sanidades</h3>
    <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar control".html_safe, "#", id: "link-to-agregar-control-ganado", class: "btn btn-primary pull-right", style: "float:right;margin-left:10px;", onclick: "$('.modal').html('');return false;" %>
    <%= modal_window( window_id: "modal-window-agregar-control-ganado", link_to_id: "#link-to-agregar-control-ganado", url: controles_ganados_agregar_path( window_id: "modal-window-agregar-control-ganado"))%>
    
  </div>
  
</div>

<div style="clear:both;"></div>
 
<div class="table-responsive" id="table-control-ganado">

  <table class="table table-small-font table-bordered table-striped" style="font-size:11px;">
   
    <thead>

      <%= form_tag controles_ganados_lista_path, remote: true, id: "form-buscar-control-ganado"  do  %>

        <tr>

          <th style="width:20px;">
            <span>ID</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_id, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th >
            <span>Descripción</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_descripcion, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_descripcion');"><i class="fa fa-times"></i></span>
            </div>
          </th>
          
           <th >
            <span>Número</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_numero_pajuela, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_numero_pajuela');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th>
            <span>Raza</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_control_ganado, :raza_id, Raza.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_raza_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 

          <th >
            <span>Cantidad</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_cantidad, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_cantidad');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th >
            <span>Costo</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_costo, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_costo');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th >
            <span>Costo Total</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_control_ganado_costo_total, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_costo_total');"><i class="fa fa-times"></i></span>
            </div>
          </th>
          
          <th>
              <span>Procedencia</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_control_ganado, :esperma_procedencia_id, EspermaProcedencia.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_esperma_procedencia_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 

          <th>
            <span>Estado</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_control_ganado, :estado_esperma_id, EstadoEsperma.orden_descripcion, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-control-ganado', '#form_buscar_control_ganado_estado_esperma_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 


          <th ></th>

        </tr>

        <% end %>

      </thead> 

    <tbody id="controles-ganados-lista"></tbody>
  
  </table>

</div>


<script type="text/javascript">

  $("#form-buscar-control-ganado").submit();

  //---------------------------- RECUPERANDO DATOS ----------------------------//
  $("#form-buscar-control-ganado").bind("submit", function () {

    var valido = true;
    if($("#form_buscar_control_ganado_descripcion").val().length !== 0 ){
      valido = false;
      if(($("#form_buscar_control_ganado_descripcion").val().replace(/\s/g,'')).length > 2){        
        valido = true;
      }else{
        valido = false;
                 
        $(".nmb").html('*Ingrese minimo 3(tres) carácteres para cada caja de texto');
        $(".nmb").attr({'style':'color: red;font-size: 8px;'});      
      }      
    }
      
    if(valido){
      
    $(".nmb").html('');       
    $("#controles-ganados-lista").html("<%= escape_javascript("<tr><td colspan='9' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")      
    }

    

  })
 
  //---------------------------------------------------------------------------//
  //---------------------------- BUSCAR PERSONAS-------- -------------------------//
  $("#table-control-ganado input, #table-control-ganado select").bind('change', function () {
      $.ajaxQ.abortAll();
      $("#form-buscar-control-ganado").submit();

  })
  //----------------------------------------------------------------------------//
  //----------------------------INICIO -----------------------------------------//
  aplicar_datepicker();
  
  //----------------------------------------------------------------------------//
  
</script>

<style>
    /*INTRO.JS*/
    .introjs-helperNumberLayer{
        width: 23px;
        height: 23px;
        padding: 0px;
    }

    #start-tour{
        cursor: pointer;
    }

    #form-buscar-control-ganado table th { background:#e6e6e6;}
    #form-buscar-control-ganado table th span.limpiar { background:#fff;}

</style>
