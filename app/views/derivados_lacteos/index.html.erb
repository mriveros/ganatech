    /*INTRO.JS*/
    .introjs-helperNumberLayer{
        width: 23px;
        height: 23px;
        padding: 0px;
    }

    #start-tour{
        cursor: pointer;
    }

    #form-buscar-derivados-lacteos table th { background:#e6e6e6;}
    #form-buscar-derivados-lacteos table th span.limpiar { background:#fff;}

