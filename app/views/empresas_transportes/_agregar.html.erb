
<div class="modal-dialog">

  <div class="modal-content">

    <div class="modal-header" style="background:#e6e6e6;">

      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Empresa de Transporte</h4>

    </div>

    <%= form_for @empresa_transporte, remote: true, url: empresas_transportes_guardar_url, html: { id: "form-agregar-empresa-transporte" }, method: 'POST' do |f| %>

    <%= hidden_field_tag :window_id, params[:window_id]%>

    <div class="modal-body">

      <div class="panel-body">

        <div class="col-sm-4"><%= f.label :nombre, "Nombre #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= f.text_field :nombre, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
        <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= f.label :ruc_ci, "RUC/CI #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= f.text_field :ruc_ci, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
        <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= f.label :telefono, "Telefono #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= f.text_field :telefono, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
        <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= f.label :direccion, "Direccion #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= f.text_field :direccion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
        <div class="col-sm-1"></div><br />

      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %>
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-empresa-transporte" %>

      </div>

      <% end %>

    </div>

  </div>

  <style type="text/css">

    #form-agregar-empresa-transporte label, #form-agregar-empresa-transporte input[type='text'], #form-agregar-empresa-transporte select { float:left; margin-top:5px;}
    #form-agregar-empresa-transporte br {clear:both; }
    #form-agregar-empresa-transporte label { width:200px;font-size:12px;margin-top:10px;}
    #form-agregar-empresa-transporte #nombre { width:50%;}
    #form-agregar-empresa-transporte #ruc_ci { width:50%;}
    #form-agregar-empresa-transporte #telefono { width:50%;}
    #form-agregar-empresa-transporte #direccion { width:50%;}

  </style>

  <script type="text/javascript">

    aplicar_datepicker2();

  </script>
