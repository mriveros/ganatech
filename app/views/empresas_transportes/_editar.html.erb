
<div class="modal-dialog" style="text-align:left;">

  <div class="modal-content">

    <div class="modal-header" style="background:#e6e6e6;">

      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Empresa de Transporte</h4>

    </div>

    <%= form_for @empresa_transporte, remote: true, url: empresas_transportes_actualizar_url, html: { id: "form-editar-empresas-transportes" }, method: 'POST' do |f| %>

      <%= f.hidden_field :id %>
      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :descripcion, "Nombre #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :nombre, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :descripcion, "RUC/CI #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :ruc_ci, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :descripcion, "Telefono #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :telefono, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :descripcion, "Direccion #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :direccion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %>
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-empresa-transporte" %>
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-empresa-transporte label, #form-editar-empresa-transporte input[type='text'], #form-editar-empresa-transporte select { float:left; margin-top:5px;}
  #form-editar-empresa-transporte br {clear:both; }
  #form-editar-empresa-transporte label { width:200px;font-size:12px;margin-top:10px;}


</style>

<script type="text/javascript">

  aplicar_datepicker2();

</script>
