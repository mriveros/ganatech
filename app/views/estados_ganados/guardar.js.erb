<% if @raza_ok %>

   $("<div class='col-sm-12' id='msg-agregar-raza' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-raza");
   
  $("#form_buscar_razas_id").val('<%= @raza.id %>');
  $("#form_buscar_razas_descripcion").val('');
  $("#form-buscar-razas").submit();
  
  setTimeout(function(){ 
    $("#<%= params[:window_id]%>").modal('hide'); 
    swal("La Raza ha sido guardado Exitosamente.");
  }, 2000);


<% else %>

	swal("Error al guardar:" + "<%=j(@msg)%>")  
  $("<div class='col-sm-12' id='msg-agregar-raza' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-raza");

<% end %>
