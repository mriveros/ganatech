<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Control</h4>
      
    </div>

    <%= form_for @control_ganado, remote: true, url: ganados_agregar_control_sanitario_url, html: { id: "form-agregar-control-sanitario" } do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <%= hidden_field_tag :ganado_id, params[:ganado_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= label_tag nil, "Control #{attr_requerido}".html_safe, id: "lbl-parentezco" %></div>
          <div class="col-sm-7"><%= collection_select :control, :id, Control.orden_01, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br />
          
          <div id= "control_otro" hidden="true">

            


          </div>

          <div id= "control_peso" hidden="true">



          </div>

                 
        
        </div>        
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#", class: "btn btn-primary", id: "btn-guardar-control-sanitario" %>
          
      </div>
    
    <% end %>

  </div>
</div>

<style type="text/css">

  #form-agregar-control-sanitario label, #form-agregar-control-sanitario input[type='text'] { float:left; margin-top:5px;}
  #form-agregar-control-sanitario br {clear:both; }
  #form-agregar-control-sanitario label { width:200px; font-size:12px;}

</style>

<script type="text/javascript">

  aplicar_datepicker2();

  setTimeout(function(){ 

    $("#control_id").focus();
   
  }, 1000);


  $("#control_id").bind('change', function () {

    if ($("#control_id").val() === "<%=PARAMETRO[:control_peso]%>")
    {

      $("#control_peso").hide(false)
      $("#control_otro").hide(true)

    }else{

      $("#control_otro").hide(false)
      $("#control_peso").hide(true)

    }

  })

 

  $("#btn-guardar-control-sanitario").bind('click', function () {

      valido = true
      msg = ""

      if($("#persona_documento").val().length == 0){

        msg +="Ingrese número de documento.\n"
        valido = false
      
      }

      if($("#persona_nombre").val().length == 0){

        msg +="Nombre de persona no puede estar vacío.\n"
        valido = false
      
      }

      if($("#persona_apellido").val().length == 0){

        msg +="Apellido de persona no puede estar vacío.\n"
        valido = false
      
      }

      if($("#parentezco_id").val().length == 0){

        msg +="La relación de parentezco debe ser seleccionada.\n"
        valido = false
      
      }

      if (valido){

        swal({
          title: "Confirmar Tutoría",
          text: "Al confirmar el Paciente estará supervisado por el Tutor y éste podrá acceder a los datos generados por los avances del Paciente.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-agregar-tutor-detalle").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })


</script>