<%= javascript_include_tag "modulos/personas.js" %>
<div class="modal-dialog" style="text-align:left;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Ganado</h4>
      
    </div>

    <%= form_for @ganado, remote: true, url: ganados_actualizar_url, html: { id: "form-editar-ganado" }, method: 'POST' do |f| %>

      <%= hidden_field :ganado_id %>
      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          
          <div class="col-sm-4"><%= label_tag :nil, "Nombre #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :nombre ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= label_tag :nil, "RP #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :rp ,@nuevo_autoincremento.to_s,class: 'form-control input-sm', readonly: true %></div>
          <div class="col-sm-1"></div><br />

         <%= hidden_field_tag :rp_padre_rp %>

        <div class="col-sm-4"><%= label_tag :nil, "RP Padre".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :rp_padre ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />

        <%= hidden_field_tag :rp_madre_rp %>
        <div class="col-sm-4"><%= label_tag :nil, "RP Madre".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :rp_madre ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= label_tag :nil, "C칩digo RFID".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :codigo_rfid ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />

        <div class="col-sm-4"><%= label_tag nil, "Hacienda #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :hacienda, :id, Hacienda.all, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <%= linked_combo "potrero_id", 
        :linked =>"hacienda_id" ,
        :url => url_for( haciendas_obtener_potreros_path(format: :json)), 
        :param => "hacienda_id",
        :clase => "hacienda" %>

        <div class="col-sm-4"><%= label_tag nil, "Potrero #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :potrero, :id, {}, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <div class="col-sm-4"><%= f.label :hectarea, "Peso Promedio #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= f.text_field :peso_promedio, :onkeypress=> "return isNumberKey(event)", class: 'form-control input-sm',style:"text-transform:uppercase;", :maxlength=> 12 %></div>
        <div class="col-sm-1"></div><br /><br />

        <div class="col-sm-4"><%= label_tag nil, "Sexo Ganado #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :sexo_ganado, :id, SexoGanado.all, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <%= linked_combo "etapa_ganado_id", 
        :linked =>"sexo_ganado_id" ,
        :url => url_for( ganados_obtener_etapa_ganado_path(format: :json)), 
        :param => "sexo_ganado_id",
        :clase => "etapa_ganado" %>

        <div class="col-sm-4"><%= label_tag nil, "Clasificaci칩n #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :etapa_ganado, :id, {}, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <div class="col-sm-4"><%= label_tag nil, "Raza Ganado #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :sexo_ganado, :id, Raza.all, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <div class="col-sm-4"><%= label_tag nil, "Tipo Concepci칩n #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :sexo_ganado, :id, TipoConcepcion.all, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>

        <div class="col-sm-4"><%= label_tag nil, "Estado Ganado #{attr_requerido}".html_safe %></div>
        <div class="col-sm-7"><%= collection_select :sexo_ganado, :id, EstadoGanado.all, :id, :descripcion, { include_blank: false}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
        <div class="col-sm-1"></div><br/>
          
        </div>
        
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
       <%= link_to "Guardar","#" ,class: "btn btn-primary", id: "btn-guardar-ganado" %>
          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-tutor label, #form-editar-tutor input[type='text'], #form-editar-tutor select { float:left; margin-top:5px;}
  #form-editar-tutor br {clear:both; }
  #form-editar-tutor label { width:200px;font-size:12px;margin-top:10px;}
  #form-editar-tutor #persona_tipo_documento_id { width:60%;}
  #form-editar-tutor #persona_nacionalidad_id { width:60%;}
  #form-editar-tutor #persona_documento_persona { width:50%;}
  #form-editar-tutor #persona_sexo { width:60%;}

</style>

<script type="text/javascript">

  setTimeout(function(){ 
    
    //$("#persona_documento_persona").focus();
  
  }, 1000);

  aplicar_datepicker2();
  

   $("#btn-guardar-ganado").bind('click', function () {

      valido = true
      msg = ""

      if($("#ganado_raza_id").val().length == 0){

        msg +="Ingrese la raza del animal.\n"
        valido = false
      
      }

      if (valido){

        swal({
          title: "Confirmar",
          text: "Al confirmar se podr치 visualizar los cambios del Ganado en la Lista de Ganados",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-agregar-ganado").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })

</script>
