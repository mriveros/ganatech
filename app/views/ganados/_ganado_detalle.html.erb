<td colspan="12">

  <div style="background: #e6e6e6; margin:15px;padding:15px;border-radius:10px;">

    <div>

      <div class="col-sm-12" style="border-bottom: 2px dashed #b6b6b6;margin-bottom:5px;padding:0px;">
        <h3 style="float:left;margin-top:5px;">Ganados Detalles</h3>
      </div>
        <div>
      
          <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar observación".html_safe, "#", id: "link-to-agregar-tutor-detalle", class: "btn btn-primary btn-xs", style: "float:right;" %>
      
        </div>
      
        <div>
        
          <%if @ganado_detalle.sexo_ganado_id == PARAMETRO[:sexo_ganado_hembra]%>
          
          <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> marcar celo".html_safe, "#", id: "link-to-agregar-tutor-detalle", class: "btn btn-primary btn-xs", style: "float:right;" %>
          
          <%end%>
        
        </div>

        <div>
          
          <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar alimentación".html_safe, "#", id: "link-to-agregar-tutor-detalle", class: "btn btn-primary btn-xs", style: "float:right;" %>
          
        </div>

        <div>

          <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i>control sanitario".html_safe, "#", id: "link-to-agregar-control-sanitario", class: "btn btn-primary btn-xs", style: "float:right;" %>

          <%= modal_window( window_id: "modal-window-agregar-control-sanitario", link_to_id: "#link-to-agregar-control-sanitario", url: ganados_agregar_control_sanitario_path( window_id: "modal-window-agregar-control-sanitario", ganado_id: params[:ganado_id]) )%>
          
        </div>

    </div>

    <div style="clear:both;"></div>
   
    <div class="panel-body">
      
      <div class="table-responsive" id="table-ganado-detalle">
          
        <table class="table table-bordered table-hover table-striped display dataTable" aria-describedby="example_info">
            
          <thead>
              
            <tr role="row">
              
              <th>Observación</th>
              
            </tr>
            
          </thead>
       
          <tbody id="ganado-detalle-lista">

            <% if @ganado_detalle.present? %>
            
              <%# @ganado_detalle.each do |gd|%>

                <tr>
                  <td><%= @ganado_detalle.observacion %></td>

                </tr>

              <%#end %>

            <% else %>

              <tr><td colspan=3>No se han encontrado datos.</td></tr>

            <% end %>
                
          </tbody>
              
        </table>
        
      </div>
      
    </div>


    <div>

      <div class="col-sm-12" style="border-bottom: 2px dashed #b6b6b6;margin-bottom:5px;padding:0px;">
        <h3 style="float:left;margin-top:5px;">Control Sanitario</h3>
      </div>
        
      <div style="clear:both;"></div>
   
    <div class="panel-body">
      
      <div class="table-responsive" id="table-ganado-detalle">
          
        <table class="table table-bordered table-hover table-striped display dataTable" aria-describedby="example_info">
            
          <thead>
              
            <tr role="row">
              
              <th>Fecha</th>
              <th>Control</th>
              <th>Peso</th>
              <th>Medicamento</th>
              <th>Cantidad Suministrada</th>
              <th>Observación</th>
              <th></th>

              
            </tr>
            
          </thead>
       
          <tbody id="ganado-detalle-lista">

            <% if @control_ganado.present? %>
            
              <% @control_ganado.each do |cg|%>

                <tr>
                  
                  <td><%= cg.fecha_control.strftime('%d/%m/%Y') %></td>
                  <td><%= cg.control %></td>
                  <td><%= cg.peso %></td>
                  <td><%= (cg.medicamento.present?)? cg.medicamento : "Sin Medicamento"%></td>
                  <td><%= (cg.cantidad_suministrada.present?)? cg.cantidad_suministrada : "Sin Medicamento" %></td>
                  <td><%= cg.observacion %></td>
                  <td> <%= link_to icon_eliminar,"#", onclick: "eliminar_registro(#{cg.control_ganado_id});return false;", class: "btn btn-danger btn-xs", id: "btn-eliminar-control-sanitario", title: 'Haga click para eliminar el Control Sanitario'%></td>


                </tr>

              <%end %>

            <% else %>

              <tr><td colspan=3>No se han encontrado datos.</td></tr>

            <% end %>
                
          </tbody>
              
        </table>
        
      </div>
      
    </div>


    <div>

      <div class="col-sm-12" style="border-bottom: 2px dashed #b6b6b6;margin-bottom:5px;padding:0px;">
        <h3 style="float:left;margin-top:5px;">Alimentación</h3>
      </div>
        
      <div style="clear:both;"></div>
   
    <div class="panel-body">
      
      <div class="table-responsive" id="table-ganado-detalle">
          
        <table class="table table-bordered table-hover table-striped display dataTable" aria-describedby="example_info">
            
          <thead>
              
            <tr role="row">
              
              <th>Observación</th>
              
            </tr>
            
          </thead>
       
          <tbody id="ganado-detalle-lista">

            <% if @ganado_detalle.present? %>
            
              <%# @ganado_detalle.each do |gd|%>

                <tr>
                  <td><%= @ganado_detalle.observacion %></td>

                </tr>

              <%#end %>

            <% else %>

              <tr><td colspan=3>No se han encontrado datos.</td></tr>

            <% end %>
                
          </tbody>
              
        </table>
        
      </div>
      
    </div>

    
  </div>

</td>

<script type="text/javascript">

  function eliminar_registro(control_ganado_id) {

        swal({
          title: "Confirmar",
          text: "Al confirmar se eliminará permanentemente de la lista de Controles Sanitarios.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

              $.ajax({
                url: "<%= url_for(ganados_eliminar_control_sanitario_path) %>", 
                data: {control_ganado_id: control_ganado_id},
                dataType: 'script'
              });
            
          } else{

            return false;

          }

        });

    
    }

</script>