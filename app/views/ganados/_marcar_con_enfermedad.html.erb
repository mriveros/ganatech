<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Marcar Ganado con Enfermedad</h4>
      
    </div>


    <%= form_for @ganado_enfermedad, remote: true, url: ganados_guardar_ganado_enfermedad_url, html: { id: "form-agregar-ganado-enfermedad" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>
      <%= hidden_field_tag :ganado_id, params[:ganado_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-1"></div><br />
          <div class="col-sm-4"><%= label_tag :nil, "Fecha Inicio #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= date_field_tag :fecha, Date.today.strftime('%d/%m/%Y'), class: 'form-control input-sm', style: "margin-top:0px;height:42px" %>
          </div>    
          <div class="col-sm-1"></div><br /> <br />        


          <div class="col-sm-4"><%= label_tag nil, "Enfermedad #{attr_requerido}".html_safe, id: "lbl-parentezco" %></div>
          <div class="col-sm-7"><%= collection_select :enfermedad, :id, Enfermedad.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag nil, "Estado Enfermedad #{attr_requerido}".html_safe, id: "lbl-parentezco" %></div>
          <div class="col-sm-7"><%= collection_select :estado_enfermedad, :id, EstadoEnfermedad.orden_01, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= label_tag :nil, "Observaci칩n ".html_safe %></div>
          <div class="col-sm-7"><%= text_area_tag :observacion ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />
                 
           
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#", class: "btn btn-primary", id: "btn-guardar-enfermedad-ganado" %>
          
      </div>
    
    <% end %>

  </div>
</div>

<style type="text/css">

  #form-agregar-ganado-enfermedad label, #form-agregar-ganado-enfermedad input[type='text'] { float:left; margin-top:5px;}
  #form-agregar-ganado-enfermedad br {clear:both; }
  #form-agregar-ganado-enfermedad label { width:200px; font-size:12px;}

</style>

<script type="text/javascript">

  aplicar_datepicker2();

  setTimeout(function(){ 

    $("#fecha").focus();
   
  }, 1000);


   $("textarea").keydown(function(e){
    // Enter was pressed without shift key
    if (e.keyCode == 13 && !e.shiftKey)
    {
        // prevent default behavior
        e.preventDefault();
    }
    });

   function isNumberKey(evt)
  {
     var charCode = (evt.which) ? evt.which : event.keyCode
     if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46) {
         
         return false;
     }

     return true;
  }

  $("#btn-guardar-enfermedad-ganado").bind('click', function () {

      valido = true
      msg = ""

      if($("#fecha").val().length == 0){

        msg +="Debe ingresar una fecha.\n"
        valido = false
      
      }

      if($("#enfermedad_id").val().length == 0){

        msg +="Debe seleccionar una Enfermedad diagnosticada.\n"
        valido = false
      
      }
      
      if($("#estado_enfermedad_id").val().length == 0){

        msg +="Debe seleccionar el estado.\n"
        valido = false
      
      }
      

      if (valido){

        swal({
          title: "Confirmar Ganado con Enfermedad",
          text: "Al confirmar el estado del Ganado cambiar치 a Enfermo y podr치 ver los datos en el m칩dulo de Ganados Enfermos.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-agregar-ganado-enfermedad").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })


</script>