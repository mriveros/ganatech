<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-ganado' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-ganado");
   
  $("#form_buscar_ganado_id").val('<%= @ganado.id %>');
  $("#form-buscar-ganado").submit();
  
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide');
    swal("El Ganado fue agregado Exitosamente.")
    
