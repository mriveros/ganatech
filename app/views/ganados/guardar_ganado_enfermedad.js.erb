<% if @guardado_ok %>

	$("<div class='col-sm-12' id='msg-editar-ganado-enfermo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Marcado Exitosamente.</div>").insertBefore("#form-agregar-ganado-enfermedad");
	setTimeout( function(){ 
  
    $("#<%= params[:window_id]%>").modal('hide');
    $("#form_buscar_ganado_id").val('<%= @ganado.id %>');
    $("#form-buscar-ganado").submit();

    swal("Marcar Enfermedad","Ganado marcado en estado Enfermo exitosamente!", "success");

    }, 1000);

 
<% else %>
	
	$("<div class='col-sm-12' id='msg-guardar-control-sanitario' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= (@msg) %></div>").insertBefore("#form-agregar-ganado-enfermedad");
    swal("Marcar Enfermedad", "Error al marcar Enfermo. Intente m√°s tarde","error");
    
<% end %> 