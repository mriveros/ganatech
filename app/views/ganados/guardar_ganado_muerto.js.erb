<% if @guardado_ok %>

	$("<div class='col-sm-12' id='msg-guardar-ganado-muerto' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Marcado Exitosamente.</div>").insertBefore("#form-agregar-ganado-muerto");
	setTimeout( function(){ 
  
    $("#<%= params[:window_id]%>").modal('hide');
    $("#form_buscar_ganado_id").val('<%= @ganado.id %>');
    $("#form-buscar-ganado").submit();

    swal("Marcar Ganado Muerto","Ganado marcado como Muerto exitosamente!", "success");

    }, 1000);

 
<% else %>
	
	$("<div class='col-sm-12' id='msg-guardar-ganado-muerto' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'>Error al marcar el Ganado como Muerto. Intente más Tarde</div>").insertBefore("#form-agregar-ganado-muerto");
    swal("Marcar Ganado Muerto", "Error al marcar el ganado como muerto. Intente más tarde","error");
    
<% end %> 