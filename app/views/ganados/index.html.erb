<%= javascript_include_tag "sweetalert.min" %>
<%= stylesheet_link_tag "sweetalert" %>
<div>

  <div class="col-sm-12" style="border-bottom: 2px solid #b6b6b6;margin-bottom:5px;padding:0px;">
    <h3 style="float:left;margin-top:5px;">Ganados</h3>
    <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar ganado".html_safe, "#", id: "link-to-agregar-ganado", class: "btn btn-primary pull-right", style: "float:right;margin-left:10px;", onclick: "$('.modal').html('');return false;" %>
    <%= modal_window( window_id: "modal-window-agregar-ganado", link_to_id: "#link-to-agregar-ganado", url: ganados_agregar_path( window_id: "modal-window-agregar-ganado") )%>
    
  </div>
  
</div>

<div style="clear:both;"></div>
 
<div class="table-responsive" id="table-ganado">

  <table class="table table-small-font table-bordered table-striped" style="font-size:11px;">
   
    <thead>

      <%= form_tag ganados_lista_path, remote: true, id: "form-buscar-ganado"  do  %>

        <tr>

          <th >
            <span>ID</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_ganado_id, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>
          
           <th >
            <span>Nombre</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_ganado_nombre, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_nombre');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th >
            <span>RP</span>
            <div class="input-group input-group-sm">
                <%= text_field_tag :form_buscar_ganado_rp, nil, :class => 'form-control', :placeholder => "" %>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_rp');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
          </th>
          
         <th >
            <span>RP Padre</span>
            <div class="input-group input-group-sm">
                <%= text_field_tag :form_buscar_ganado_rp_padre, nil, :class => 'form-control', :placeholder => "" %>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_rp_padre');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
          </th>

          <th >
            <span>RP Madre</span>
            <div class="input-group input-group-sm">
                <%= text_field_tag :form_buscar_ganado_rp_madre, nil, :class => 'form-control', :placeholder => "" %>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_rp_madre');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
          </th>

          <th>
            <div><%= label_tag nil, "Fecha Nacimiento".html_safe %></div>
              <div class='input-group date'>
                <%= text_field_tag :form_buscar_ganado_fecha_nacimiento, nil, class: 'form-control input-sm' %>
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_fecha_nacimiento');"><i class="fa fa-times"></i></span>
              </div>
         </th>

         <th>
              <span>Raza</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_ganado, :raza_ganado_id, Raza.orden_01, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_raza_ganado_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 

         <th>
              <span>Clasificacion</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_ganado, :etapa_ganado_id, EtapaGanado.orden_01, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-ganado', '#form_buscar_ganado_estapa_ganado_id');"><i class="fa fa-times"></i></span>
            </div>
          </th> 


          <th ></th>

        </tr>

        <% end %>

      </thead> 

    <tbody id="ganados-lista"></tbody>
  
  </table>

</div>




<script type="text/javascript">

  $("#form-buscar-ganado").submit();

  //---------------------------- RECUPERANDO DATOS ----------------------------//
  $("#form-buscar-ganado").bind("submit", function () {

    var valido = true;
    if($("#form_buscar_ganado_nombre").val().length !== 0 ){
      valido = false;
      if(($("#form_buscar_ganado_nombre").val().replace(/\s/g,'')).length > 2 ){        
        valido = true;

      }else{
        valido = false;
               
        $(".nmb").html('*Ingrese minimo 3(tres) car√°cteres para cada caja de texto');
        $(".nmb").attr({'style':'color: red;font-size: 8px;'});      
      }      
    }
      
    if(valido){
      
    $(".nmb").html('');       
    $("#ganados-lista").html("<%= escape_javascript("<tr><td colspan='9' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")      
    }

    

  })
 
  
  //---------------------------- BUSCAR GANADO-------- -------------------------//
  $("#table-ganado input, #table-ganado select").bind('change', function () {
      $.ajaxQ.abortAll();
      $("#form-buscar-ganado").submit();

  })
  //----------------------------------------------------------------------------//

  aplicar_datepicker();
  

  
</script>

<style>
    /*INTRO.JS*/
    .introjs-helperNumberLayer{
        width: 23px;
        height: 23px;
        padding: 0px;
    }

    #start-tour{
        cursor: pointer;
    }

    #form-buscar-ganado table th { background:#e6e6e6;}
    #form-buscar-ganado table th span.limpiar { background:#fff;}

</style>
