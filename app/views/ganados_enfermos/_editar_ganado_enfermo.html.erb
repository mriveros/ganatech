
<div class="modal-dialog" style="text-align:left;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Ganado Enfermo</h4>
      
    </div>

    <%= form_for @ganado_enfermo, remote: true, url: ganados_enfermos_actualizar_ganado_enfermo_url, html: { id: "form-editar-ganado-enfermo" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>
      <%= hidden_field_tag :ganado_enfermo_id, params[:ganado_enfermo_id]%>

      <div class="modal-body">

        <div class="panel-body">

           <div class="col-sm-4"><%= label_tag nil, "Estado Enfermedad #{attr_requerido}".html_safe, id: "lbl-parentezco" %></div>
          <div class="col-sm-7"><%= f.collection_select :estado_enfermedad_id, EstadoEnfermedad.modulo_ganados_enfermos, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br /><br />

           <div class="col-sm-4"><%= label_tag :nil, "ObservaciÃ³n ".html_safe %></div>
          <div class="col-sm-7"><%= f.text_area :observacion ,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />
          
        </div>

      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-actualzar-ganado-enfermo" %>          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-ganado-enfermo label, #form-editar-ganado-enfermo input[type='text'], #form-editar-ganado-enfermo select { float:left; margin-top:5px;}
  #form-editar-ganado-enfermo br {clear:both; }
  #form-editar-ganado-enfermo label { width:200px;font-size:12px;margin-top:10px;}


</style>

