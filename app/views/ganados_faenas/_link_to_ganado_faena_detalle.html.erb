<%= link_to icon_detalles, "#", id: "link-to-ganado-faena-detalle-#{ganado_faena_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la Faena' %>

<script type="text/javascript">

  $("#link-to-ganado-faena-detalle-<%= ganado_faena_id %>").bind('click', function(){

    var contenido = $.trim($("#ganado-faena-detalle-<%= ganado_faena_id %>").html());

    $(".ganado-faena-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='ganado-faena-detalle-<%= ganado_faena_id %>' class='ganado-faena-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(ganados_faenas_ganado_faena_detalle_path) %>',  
        data: { ganado_faena_id: <%= ganado_faena_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>