<%= link_to icon_detalles, "#", id: "link-to-esperma-detalle-#{esperma_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la Muestra', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-esperma-detalle-<%= esperma_id %>").bind('click', function(){

    var contenido = $.trim($("#esperma-detalle-<%= esperma_id %>").html());

    $(".esperma-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='esperma-detalle-<%= esperma_id %>' class='esperma-detalle'><td colspan='4' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(espermas_esperma_detalle_path) %>',  
        data: { esperma_id: <%= esperma_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>