<% if @hacienda_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-hacienda' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-hacienda");
   
  $("#form_buscar_haciendas_id").val('<%= @hacienda.id %>');
  $("#form_buscar_haciendas_codigo").val('');
  $("#form_buscar_haciendas_monto").val('');
  $("#form_buscar_haciendas_descripcion").val('');
  setTimeout(function(){ 

    $("#<%= params[:window_id]%>").modal('hide'); 
    $("#form-buscar-haciendas").submit();
    swal("Guardado Exitosamente.");

  }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-hacienda' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-hacienda");
   swal('<%= @msg.gsub('.','\n') %>');

<% end %>
