<% if @hacienda_ok %>

   $("<div class='col-sm-12' id='msg-agregar-hacienda' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-hacienda");
   
  $("#form_buscar_haciendas_id").val('<%= @hacienda.id %>');
