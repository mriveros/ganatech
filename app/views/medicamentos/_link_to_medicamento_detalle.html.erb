<%= link_to icon_detalles, "#", id: "link-to-celo-detalle-#{celo_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles del Celo', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-celo-detalle-<%= celo_id %>").bind('click', function(){

    var contenido = $.trim($("#celo-detalle-<%= celo_id %>").html());

    $(".celo-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='celo-detalle-<%= celo_id %>' class='celo-detalle'><td colspan='4' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(celos_celos_detalles_path) %>',  
        data: { celo_id: <%= celo_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>