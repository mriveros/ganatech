<% if @medicamento_ok.present? %>

    $("<div class='col-sm-12' id='msg-editar-medicamento' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-medicamento");
   
    $("#form_buscar_medicamento_id").val('<%= @medicamento.id %>');
    $("#form_buscar_medicamento_nombre_medicamento").val('');
    $("#form_buscar_medicamento_descripcion").val('');
    $("#form_buscar_medicamento_cantidad_stock").val('');
  
    setTimeout(function(){ 

      $("#<%= params[:window_id]%>").modal('hide'); 
      $("#form-buscar-medicamento").submit();
      swal("Medicamentos","Medicamento modificado exitosamente!", "success");

  }, 1000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-medicamento' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-editar-medicamento");
  swal("Medicamentos", "Error al modificar el Medicamento.<%=@msg%> Intente m√°s tarde","error");

<% end %>
