<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-medicamento' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-medicamento");
   
  $("#form_buscar_medicamento_id").val('<%= @medicamento.id %>');
  $("#form_buscar_medicamento_nombre_medicamento").val('');
  $("#form_buscar_medicamento_descripcion").val('');
  $("#form_buscar_medicamento_cantidad_stock").val('');
  $("#form-buscar-medicamento").submit();
  
  setTimeout(function(){ 
    $("#<%= params[:window_id]%>").modal('hide'); 
    swal("Medicamentos","Medicamento agregado exitosamente!", "success");
  }, 2000);


<% else %>
  
    $("<div class='col-sm-12' id='msg-agregar-medicamento' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'>No se pudo guardar el medicamento</div>").insertBefore("#form-agregar-medicamento");
    swal("Medicamentos", "Error al guardar el Medicamento.<%=@msg%> Intente m√°s tarde","error");

<% end %>