<%= link_to icon_detalles, "#", id: "link-to-material-detalle-#{material_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles del Material', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-material-detalle-<%= material_id %>").bind('click', function(){

    var contenido = $.trim($("#material-detalle-<%= material_id %>").html());

    $(".material-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='material-detalle-<%=material_id%>' class='material-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(materiales_material_detalle_path) %>',
        data: { material_id: <%= material_id %>},
        dataType: 'script'

      })

    }

    return false;
  })

</script>
