<% if @material_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-material' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-materiales");

  $("#form_buscar_materiales_id").val('<%= @material.id %>');
  $("#form_buscar_materiales_nombre_material").val('');
  $("#form_buscar_materiales_cantidad_stock").val('');

  setTimeout(function(){

    $("#<%= params[:window_id]%>").modal('hide');
    $("#form-buscar-materiales").submit();
    swal("El Material ha sido actualizado Exitosamente.");

  }, 2000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-material' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-editar-materiales");

<% end %>
