<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-orden-trabajo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-ordenes-trabajos");
   $("#form_buscar_ordenes_trabajos_id").val("<%=@orden_trabajo_elim.id%>")
   $("#form-buscar-ordenes_trabajos").submit();
    setTimeout(function(){

      $("#msg-eliminar-orden-trabajo").remove();
      swal("La Orden de Trabajo ha sido eliminado Exitosamente.");

    }, 1000);

<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-orden-trabajo' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#table-ordenes-trabajos");
  setTimeout(function(){ 
    
    $("#msg-eliminar-orden-trabajo").remove(); 
    swal("No se pudo eliminar la Orden de Trabajo.<%= @msg %> Intente m√°s tarde.")

  }, 2000);


<% end %>
