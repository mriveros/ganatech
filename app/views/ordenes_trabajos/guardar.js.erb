<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-material' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-material");

  $("#form_buscar_materiales_id").val('<%= @material.id %>');
  $("#form_buscar_materiales_nombre_material").val('');
  $("#form-buscar-materiales").submit();

  setTimeout(function(){
    
    $("#<%= params[:window_id]%>").modal('hide');
