<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-orden-trabajo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-orden-trabajo");

  $("#form_buscar_ordenes_trabajos_id").val('<%= @orden_trabajo.id %>');
