<%= link_to icon_detalles, "#", id: "link-to-salario-detalle-#{pago_salario_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la ProducciÃ³n' %>

<script type="text/javascript">

  $("#link-to-salario-detalle-<%= pago_salario_id %>").bind('click', function(){

    var contenido = $.trim($("#salario-detalle-<%= pago_salario_id %>").html());

    $(".salario-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='salario-detalle-<%= pago_salario_id %>' class='salario-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(pagos_salarios_salario_detalle_path) %>',  
        data: { pago_salario_id: <%= pago_salario_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>