<% if @registro_gasto_ok.present? %>

    $("<div class='col-sm-12' id='msg-editar-pago-salario' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-pago-salario");
   
    $("#<%= params[:window_id]%>").modal('hide');
    $("#form_buscar_pagos_salarios_id").val('<%=@pago_salario.id%>');
    $("#form_buscar_pagos_salarios_fecha").val('');
    $("#form_buscar_pagos_salarios_mes_periodo").val('');
    $("#form_buscar_pagos_salarios_anho_periodo").val('');
    $("#form_buscar_pagos_salarios_hacienda_id").val('');
    $("#form_buscar_pagos_salarios_total_salario").val('');
    $("#form_buscar_pagos_salarios_total_adelantos").val('');
    $("#form_buscar_pagos_salarios_total_descuentos").val('');
    $("#form_buscar_pagos_salarios_total_remuneraciones_extras").val('');
    $("#form_buscar_pagos_salarios_monto_total_pagado").val('');
  
    setTimeout(function(){ 

      $("#<%= params[:window_id]%>").modal('hide'); 
      $("#form-buscar-pagos-salarios").submit();
      swal("Pagos Salarios","Registro de Salarios modificado exitosamente!", "success");

  }, 1500);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-pago-salario' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-editar-pago-salario");
  swal("Pagos Salarios", "Error al modificar el Registro de Pago de Salarios. Intente m√°s tarde","error");

<% end %>
