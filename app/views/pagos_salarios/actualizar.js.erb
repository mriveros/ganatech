<% if @registro_gasto_ok.present? %>

    $("<div class='col-sm-12' id='msg-editar-registro-gasto' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-registro-gasto");
   
      $("#<%= params[:window_id]%>").modal('hide');
	  $("#form_buscar_registros_gastos_id").val('<%=@registro_gasto.id%>');
	  $("#form_buscar_registros_gastos_fecha").val('');
	  $("#form_buscar_registros_gastos_gasto").val('');
	  $("#form_buscar_registros_gastos_monto").val('');
	  $("#form_buscar_registros_gastos_observacion").val('');
  
    setTimeout(function(){ 

      $("#<%= params[:window_id]%>").modal('hide'); 
      $("#form-buscar-registros-gastos").submit();
      swal("Registros Gastos","Registro de Gasto modificado exitosamente!", "success");

  }, 1500);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-registro-gasto' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#form-editar-registro-gasto");
  swal("Registros Gastos", "Error al modificar el Registro de Gasto. Intente m√°s tarde","error");

<% end %>
