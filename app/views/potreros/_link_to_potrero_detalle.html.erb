<%= link_to icon_detalles, "#", id: "link-to-potrero-detalle-#{potrero_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles del Potrero', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-potrero-detalle-<%= potrero_id %>").bind('click', function(){

    var contenido = $.trim($("#potrero-detalle-<%= potrero_id %>").html());

    $(".potrero-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='potrero-detalle-<%= potrero_id %>' class='potrero-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(potreros_potrero_detalle_path) %>',  
        data: { potrero_id: <%= potrero_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>