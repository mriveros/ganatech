<%= link_to icon_geocercas, "#", id: "link-to-potrero-geocerca-#{potrero_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los geocercas del Potrero', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-potrero-geocerca-<%= potrero_id %>").bind('click', function(){

    var contenido = $.trim($("#potrero-geocerca-<%= potrero_id %>").html());

    $(".potrero-geocerca").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='potrero-geocerca-<%= potrero_id %>' class='potrero-geocerca'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(potreros_potrero_geocerca_path) %>',  
        data: { potrero_id: <%= potrero_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>