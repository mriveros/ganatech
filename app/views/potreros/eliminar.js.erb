<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-potrero' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-potreros");
   $("#form_buscar_potrero_id").val("<%=@potrero_elim.id%>")
   $("#form-buscar-potrero").submit();
    setTimeout(function(){ 
      
      $("#msg-eliminar-potrero").remove();
      swal("Potrero eliminado Exitosamente.");

    }, 1000);
      
<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-potrero' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg %></div>").insertBefore("#table-potreros");
  setTimeout(function(){ 

    $("#msg-eliminar-potrero").remove(); 

    swal("No se pudo Eliminar. Intente m√°s tarde. Error: <%=@msg%>")
  
  }, 2000);
  
    
<% end %>
