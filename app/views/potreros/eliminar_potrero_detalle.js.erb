<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-potrero-detalle' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-potrero-detalle");
   
    setTimeout(

      function(){ $("#msg-eliminar-potrero-detalle").remove(); 
     
      $("#link-to-potrero-detalle-<%= @potrero_detalle_elim.potrero_id%>").trigger('click');
      $("#link-to-potrero-detalle-<%= @potrero_detalle_elim.potrero_id%>").trigger('click');
      
       swal("Detalle de Potrero eliminado exitosamente.");

    }, 1000);
   
    
<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-potrero-detalle' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'>No se pudo eliminar el detalle. Intente más tarde.</div>").insertBefore("#table-potrero-detalle");
  setTimeout(function(){ 
    
    $("#msg-eliminar-potrero-detalle").remove();

    swal("No se pudo eliminar el detalle del Potrero. Intente más tarde.")

     }, 2000);
    
<% end %>