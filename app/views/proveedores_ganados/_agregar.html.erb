
<div class="modal-dialog">

  <div class="modal-content">

    <div class="modal-header" style="background:#e6e6e6;">

      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Proveedor de Ganado</h4>

    </div>

    <%= form_for @proveedor_ganado, remote: true, url: proveedores_ganados_guardar_url, html: { id: "form-agregar-proveedor-ganado" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :nombre_razon_social, "Nombre/Razon Social #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :nombre_razon_social, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :ruc_ci, "RUC/CI #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :ruc_ci, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :direccion, "Direccion #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :direccion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :telefono, "Telefono #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :telefono, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :email, "Email #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :email, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :observacion, "Observacion ".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :observacion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

        </div>

        <div class="modal-footer" style="background:#e6e6e6;">

          <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %>
          <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-proveedor-ganado" %>

        </div>

    <% end %>

    </div>

  </div>

  <style type="text/css">

      #form-agregar-proveedor-ganado label, #form-agregar-proveedor-ganado input[type='text'], #form-agregar-proveedor-ganado select { float:left; margin-top:5px;}
      #form-agregar-proveedor-ganado br {clear:both; }
      #form-agregar-proveedor-ganado label { width:200px;font-size:12px;margin-top:10px;}
      #form-agregar-proveedor-ganado #nombre_razon_social { width:50%;}
      #form-agregar-proveedor-ganado #ruc_ci { width:50%;}
      #form-agregar-proveedor-ganado #direccion { width:50%;}
      #form-agregar-proveedor-ganado #telefono { width:50%;}
      #form-agregar-proveedor-ganado #email { width:50%;}
      #form-agregar-proveedor-ganado #observacion { width:50%;}



  </style>

  <script type="text/javascript">

      aplicar_datepicker2();

  </script>