<%= javascript_include_tag "sweetalert.min" %>
<%= stylesheet_link_tag "sweetalert" %>
<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Reproduccion</h4>
      
    </div>

    <%= form_for @reproduccion, remote: true, url: reproducciones_guardar_url, html: { id: "form-agregar-reproduccion" , autocomplete: 'off'}, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      
      <div class="modal-body">

        <div class="panel-body">

          <%= hidden_field_tag :ganado_id %>
          <div class="col-sm-4"><%= label_tag :nil, "Ganado #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= text_area_tag :ganado ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br /><br />

          <div class="col-sm-4"><%= f.label :nombre_lbl, "Nombre Ganado ".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :nombre_ganado, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
          <div class="col-sm-1"></div><br /><br />  
          

          <div class="col-sm-4"><%= f.label :rp_lbl, "RP ".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :rp, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
          <div class="col-sm-1"></div><br /><br />


          <div class="col-sm-4"><%= f.label :rfid_lbl, "Código RFID ".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :codigo_rfid, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
          <div class="col-sm-1"></div><br /><br />


          <div class="col-sm-4"><%= f.label :hacienda_lbl, "Hacienda ".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :hacienda, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
          <div class="col-sm-1"></div><br /><br />


          <div class="col-sm-4"><%= label_tag nil, "Tipo Concepción #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= collection_select :tipo_concepcion, :id, TipoConcepcion.tipo_concepcion.orden_01, :id, :descripcion, { include_blank: true}, { class: 'form-control input-sm', style: "width:200px;"} %></div>
          <div class="col-sm-1"></div><br/><br/>
          
          <div id = "monta_natural" hidden="true">

            <%= hidden_field_tag :ganado_reproductor_id %>
            <div class="col-sm-4"><%= label_tag :nil, "Ganado #{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= text_area_tag :ganado_reproductor ,nil,class: 'form-control input-sm' %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= f.label :nombre_lbl, "Nombre Ganado ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :nombre_ganado_reproductor, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />  
            

            <div class="col-sm-4"><%= f.label :rp_lbl, "RP ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :rp_reproductor, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />


            <div class="col-sm-4"><%= f.label :rfid_lbl, "Código RFID ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :codigo_rfid_reproductor, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />
          
          </div>


          <div id = "inseminacion_artificial" hidden="true">

            <%= hidden_field_tag :esperma_id %>
            <div class="col-sm-4"><%= label_tag :nil, "Muestra(Esperma)#{attr_requerido}".html_safe %></div>
            <div class="col-sm-7"><%= text_area_tag :esperma ,nil,class: 'form-control input-sm' %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= f.label :procedencia_lbl, "Procedencia ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :procedencia_muestra, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />  

            <div class="col-sm-4"><%= f.label :nombre_lbl, "Nombre Ganado ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :nombre_ganado_muestra, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />  
            
            <div class="col-sm-4"><%= f.label :raza_lbl, "Raza ".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :raza_muestra, nil,class: 'form-control input-sm',style:"text-transform:uppercase;", readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= f.label :numero_muestra_lbl, "Número Muestra".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :numero_muestra, nil,class: 'form-control input-sm', readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= f.label :cantidad_muestra_lbl, "Cantidad".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :cantidad_muestra, nil,class: 'form-control input-sm', readonly: true %></div>
            <div class="col-sm-1"></div><br /><br />

            <div class="col-sm-4"><%= label_tag :nil, "Nombre Inseminador".html_safe %></div>
            <div class="col-sm-7"><%= text_field_tag :inseminador ,nil,class: 'form-control input-sm' %></div>
            <div class="col-sm-1"></div><br /><br />


          </div>

          <div class="col-sm-4"><%= label_tag :nil, "Fecha Reproducción #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= date_field_tag :fecha_reproduccion, Date.today.strftime('%d/%m/%Y'), class: 'form-control input-xs' %>
          </div>    
          <div class="col-sm-1"></div><br /><br />  

          <div class="col-sm-4"><%= label_tag :nil, "Fecha Estimada".html_safe %></div>
          <div class="col-sm-7"><%= date_field_tag :fecha_concepcion, nil, class: 'form-control input-xs' %>
          </div>    
          <div class="col-sm-1"></div><br /><br /> 

          <div class="col-sm-4"><%= label_tag :nil, "Descripción #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :descripcion ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br /><br />


          <div class="col-sm-4"><%= label_tag :nil, "Observación ".html_safe %></div>
          <div class="col-sm-7"><%= text_area_tag :observacion ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />
                 
           
       
      
          
        </div>        
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#" ,class: "btn btn-primary", id: "btn-guardar-reproduccion" %>
          
      </div>
 
    <%end %>

  </div>
  


<style type="text/css">

  #form-agregar-reproduccion label, #form-agregar-reproduccion input[type='text'], #form-agregar-reproduccion select { float:left; margin-top:5px;}
  #form-agregar-reproduccion br {clear:both; }
  #form-agregar-reproduccion label { width:200px;font-size:12px;margin-top:10px;}
  #form-agregar-reproduccion #descripcion { width:100%;}
  #form-agregar-reproduccion #fecha_inicio { width:80%;}
  #form-agregar-reproduccion #fecha_fin { width:80%;}
  .ui-autocomplete{z-index: 1000000; font-size: 10px;}

</style>

<script type="text/javascript">

  aplicar_datepicker2();

   function isNumberKey(evt)
  {
     var charCode = (evt.which) ? evt.which : event.keyCode
     if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46) {
         
         return false;
     }

     return true;
  }

  //OBTENER GANADO EN CELO
  $("#ganado").bind('focus', function(){   

    var ganados = [];

    $("#ganado").val('');
    $("#ganado_id").val('');
    $("#nombre_ganado").val('');
    $("#hacienda").val('');
    $("#rp").val('');
    $("#codigo_rfid").val('');

    $.getJSON("<%= url_for(reproducciones_buscar_ganado_estado_celo_path) %>", { ganado: $(this).val(), sexo_ganado_id: <%=PARAMETRO[:sexo_ganado_hembra]%>}, function(j){
        
      var ganado = "";
      var options = "<option value=''> -- Seleccione un Ganado -- </option>"
      for (var i = 0; i < j.length; i++) {
        
        if(j[i].nombre != ganado ){
          
          ganados.push( {value: j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid+" - "+j[i].hacienda});
          ganado =j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp +" - "+j[i].codigo_rfid ;

          options += "<option value="+ j[i].ganado_id +" - "+ j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid + "</option>"

        }

      }

      $("#ganado_id").html(options);

    })

    $("#ganado").autocomplete({

      minLength: 1,
      source: ganados,
      focus: function( event, ui ) {
      
        $("#ganado" ).val( ui.item.label );
        return false;
      },
      select: function( event, ui ) {

        var datos = ui.item.value.split(" - ");
        $("#ganado").val( ui.item.label);
        $("#ganado_id").val(datos[0]);
        $("#nombre_ganado").val(datos[1]);
        $("#rp").val(datos[2]);
        $("#codigo_rfid").val(datos[3]);
        $("#hacienda").val(datos[4]);

        return false;

      }

    })

  });

  //OBTENER GANADO REPRODUCTOR
  $("#ganado_reproductor").bind('focus', function(){   

    var ganados = [];

    $("#ganado_reproductor").val('');
    $("#ganado_reproductor_id").val('');
    $("#nombre_ganado_reproductor").val('');
    $("#hacienda_reproductor").val('');
    $("#rp_reproductor").val('');
    $("#codigo_rfid_reproductor").val('');

    $.getJSON("<%= url_for(celos_buscar_ganado_reproductor_path) %>", { ganado: $(this).val(), sexo_ganado_id: <%=PARAMETRO[:sexo_ganado_macho]%>}, function(j){
        
      var ganado = "";
      var options = "<option value=''> -- Seleccione un Ganado -- </option>"
      for (var i = 0; i < j.length; i++) {
        
        if(j[i].nombre != ganado ){
          
          ganados.push( {value: j[i].ganado_id +" - "+j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid+" - "+j[i].hacienda});
          ganado =j[i].ganado_id +" - "+j[i].nombre+" - "+j[i].rp +" - "+j[i].codigo_rfid ;

          options += "<option value="+ j[i].ganado_id +" - "+j[i].nombre+" - "+j[i].rp+" - "+j[i].codigo_rfid + "</option>"

        }

      }

      $("#ganado_reproductor_id").html(options);

    })

    $("#ganado_reproductor").autocomplete({

      minLength: 1,
      source: ganados,
      focus: function( event, ui ) {
      
        $("#ganado_reproductor").val( ui.item.label );
        return false;
      },
      select: function( event, ui ) {

        var datos = ui.item.value.split(" - ");
        $("#ganado_reproductor").val( ui.item.label);
        $("#ganado_reproductor_id").val(datos[0]);
        $("#procedencia_muestra").val(datos[1]);
        $("#nombre_ganado_reproductor").val(datos[1]);
        $("#rp_reproductor").val(datos[2]);
        $("#codigo_rfid_reproductor").val(datos[3]);
        $("#hacienda_reproductor").val(datos[4]);

        return false;

      }

    })

  });



  //OBTENER MUESTRAS DEL MODULO DE ESPERMAS
  $("#esperma").bind('focus', function(){   

    var muestras = [];

    $("#esperma").val('');
    $("#esperma_id").val('');
    $("#procedencia_muestra").val('');
    $("#nombre_ganado_muestra").val('');
    $("#raza_muestra").val('');
    $("#cantidad_muestra").val('');
    $("#numero_muestra").val('');
    

    $.getJSON("<%= url_for(celos_buscar_esperma_reproductor_path) %>", { esperma: $(this).val()}, function(j){
        
      var muestra = "";
      var options = "<option value=''> -- Seleccione una Muestra -- </option>"
      for (var i = 0; i < j.length; i++) {
        
        if(j[i].descripcion != muestra ){
          
          muestras.push( {value: j[i].esperma_id +" - "+ j[i].descripcion+" - "+j[i].esperma_procedencia+" - "+j[i].ganado_nombre+" - "+j[i].raza_ganado+" - "+j[i].numero_pajuela+" - "+j[i].cantidad});
          ganado =j[i].esperma_id +" - "+ j[i].descripcion+" - "+j[i].esperma_procedencia+" - "+j[i].ganado_nombre +" - "+j[i].raza_ganado+" - "+j[i].numero_pajuela+" - "+j[i].cantidad ;

          options += "<option value="+ j[i].esperma_id +" - "+ j[i].descripcion+" - "+j[i].esperma_procedencia+" - "+j[i].ganado_nombre+" - "+j[i].raza_ganado +" - "+j[i].numero_pajuela+" - "+j[i].cantidad + "</option>"

        }

      }

      $("#esperma_id").html(options);

    })

    $("#esperma").autocomplete({

      minLength: 1,
      source: muestras,
      focus: function( event, ui ) {
      
        $("#esperma" ).val( ui.item.label );
        return false;
      },
      select: function( event, ui ) {

        var datos = ui.item.value.split(" - ");
        $("#esperma").val( ui.item.label);
        $("#esperma_id").val(datos[0]);
        $("#procedencia_muestra").val(datos[2]);
        if (datos[3]==='null'){

           $("#nombre_ganado_muestra").val("Muestra Comprada");

        }else{

          $("#nombre_ganado_muestra").val(datos[3]);

        }
        $("#raza_muestra").val(datos[4]);
        $("#numero_muestra").val(datos[5]);
        $("#cantidad_muestra").val(datos[6]);

        return false;

      }

    })

  });


  $("#btn-guardar-reproduccion").bind('click', function () {

      valido = true
      msg = ""

      if($("#tipo_concepcion_id").val().length == 0){

        msg +="Debe seleccionar un tipo de Concepción.\n"
        valido = false
          
      }

     if($("#tipo_concepcion_id").val() == <%=PARAMETRO[:tipo_concepcion_monta_natural]%>){

      if($("#ganado_reproductor_id").val().length == 0){

        msg +="Debe seleccionar un Ganado como Reproductor.\n"
        valido = false
          
      }

     }
      else{

        if($("#esperma_id").val().length == 0){

          msg +="Debe seleccionar una Muestra para la Reproducción.\n"
          valido = false
          
        }
          
      }
      
      if($("#fecha_reproduccion").val().length == 0){

        msg +="Debe agregar una fecha de Reproducción.\n"
        valido = false
          
      }

      if($("#descripcion").val().length == 0){

        msg +="Debe agregar una Descripción.\n"
        valido = false
          
      }
    

      if (valido){

        swal({
          title: "Confirmar Reproducción",
          text: "Al confirmar el estado del Celo a Reproducción éste podrá ser visualizado en el módulo de Reproducciones para su seguimiento durante el proceso de preñez.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-agregar-reproduccion").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })

  

  $("#tipo_concepcion_id").bind('change', function(){ 

    if ($(this).val() == <%=PARAMETRO[:tipo_concepcion_monta_natural]%>){

      $("#monta_natural").show();
      $("#inseminacion_artificial").hide();

    } else{

      $("#inseminacion_artificial").show();
      $("#monta_natural").hide();

    } 

  })


  $("#fecha_reproduccion").bind('change', function(){ 
    
    $("#fecha_concepcion").val ('<%=Date.today + 285.days%>')

  })

</script>
