<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-trabajo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-trabajos");
   $("#form_buscar_trabajos_id").val("<%=@trabajo_elim.id%>");
   $("#form-buscar-trabajos").submit();
    setTimeout(function(){

      $("#msg-eliminar-trabajo").remove();
      swal("El Trabajo ha sido eliminado Exitosamente.");

    }, 1000);

