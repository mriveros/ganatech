<% if @trabajo_ok %>

   $("<div class='col-sm-12' id='msg-agregar-trabajo' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-trabajo");

  $("#form_buscar_trabajos_id").val('<%= @trabajo.id %>');
  $("#form_buscar_trabajos_descripcion").val('');
  $("#form-buscar-trabajos").submit();

  setTimeout(function(){
    $("#<%= params[:window_id]%>").modal('hide');
    swal("El Trabajo ha sido guardado Exitosamente.");
  }, 2000);


<% else %>

	swal("Error al guardar:" + "<%=j(@msg)%>")
  $("<div class='col-sm-12' id='msg-agregar-trabajo' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-trabajo");

<% end %>
