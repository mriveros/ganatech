<%= link_to icon_detalles, "#", id: "link-to-derivado-lacteo-detalle-#{derivado_lacteo_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la ProducciÃ³n' %>

<script type="text/javascript">

  $("#link-to-derivado-lacteo-detalle-<%= derivado_lacteo_id %>").bind('click', function(){

    var contenido = $.trim($("#derivado-lacteo-detalle-<%= derivado_lacteo_id %>").html());

    $(".derivado-lacteo-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='derivado-lacteo-detalle-<%= derivado_lacteo_id %>' class='derivado-lacteo-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(ventas_derivados_derivado_lacteo_detalle_path) %>',  
        data: { derivado_lacteo_id: <%= derivado_lacteo_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>